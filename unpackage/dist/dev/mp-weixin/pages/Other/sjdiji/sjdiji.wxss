	-webkit-box-flex: 2;
	-webkit-flex: 2;
	        flex: 2;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	text-align: center;
	margin-right: 15rpx;
	border-bottom: #000000 solid 0.5rpx;
}
